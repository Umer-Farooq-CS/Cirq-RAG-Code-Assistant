# Cirq-RAG-Code-Assistant Environment Configuration Template
# Copy this file to .env and update with your actual values

# =============================================================================
# API Keys (if needed)
# =============================================================================
# OPENAI_API_KEY=your_openai_api_key_here
# HUGGINGFACE_API_KEY=your_huggingface_api_key_here
# ANTHROPIC_API_KEY=your_anthropic_api_key_here

# =============================================================================
# Database Configuration
# =============================================================================
DATABASE_URL=sqlite:///data/cirq_rag.db
# For PostgreSQL: postgresql://user:password@localhost:5432/cirq_rag
# For MySQL: mysql://user:password@localhost:3306/cirq_rag

# =============================================================================
# Logging Configuration
# =============================================================================
LOG_LEVEL=INFO
LOG_FILE=outputs/logs/cirq_rag.log
LOG_FORMAT=text
ENABLE_CONSOLE_LOGGING=true
ENABLE_FILE_LOGGING=true
MAX_LOG_FILE_SIZE=10MB
LOG_BACKUP_COUNT=5

# =============================================================================
# TensorFlow Configuration
# =============================================================================
TF_CPP_MIN_LOG_LEVEL=1
CUDA_VISIBLE_DEVICES=0
TF_FORCE_GPU_ALLOW_GROWTH=true
TF_GPU_MEMORY_ALLOCATION=0.8

# =============================================================================
# Development Settings
# =============================================================================
DEBUG=true
ENVIRONMENT=development
TESTING=false

# =============================================================================
# Model Configuration
# =============================================================================
DEFAULT_MODEL_NAME=sentence-transformers/all-MiniLM-L6-v2
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
VECTOR_DB_TYPE=faiss
MAX_RETRIEVAL_RESULTS=5
SIMILARITY_THRESHOLD=0.7

# =============================================================================
# Agent Configuration
# =============================================================================
MAX_ITERATIONS=10
TIMEOUT_SECONDS=300
AGENT_PARALLEL_EXECUTION=true
AGENT_RETRY_ATTEMPTS=3

# =============================================================================
# RAG Configuration
# =============================================================================
KNOWLEDGE_BASE_PATH=data/knowledge_base
VECTOR_INDEX_PATH=data/models/vector_index
CHUNK_SIZE=512
CHUNK_OVERLAP=50
TOP_K_RESULTS=5

# =============================================================================
# Evaluation Configuration
# =============================================================================
EVALUATION_DATASET_PATH=data/datasets/evaluation
BENCHMARK_DATASET_PATH=data/datasets/benchmark
METRICS_OUTPUT_PATH=outputs/reports/metrics.json
EVALUATION_BATCH_SIZE=32

# =============================================================================
# Performance Configuration
# =============================================================================
BATCH_SIZE=16
MAX_WORKERS=4
CACHE_SIZE=1000
ENABLE_CACHING=true

# =============================================================================
# Security Configuration
# =============================================================================
SECRET_KEY=your_secret_key_here
API_KEY_LENGTH=32
SESSION_TIMEOUT=3600

# =============================================================================
# External Services (Optional)
# =============================================================================
# REDIS_URL=redis://localhost:6379/0
# ELASTICSEARCH_URL=http://localhost:9200
# MONGO_URL=mongodb://localhost:27017/cirq_rag

# =============================================================================
# Monitoring and Metrics (Optional)
# =============================================================================
# PROMETHEUS_PORT=8001
# ENABLE_METRICS=true
# METRICS_INTERVAL=60

# =============================================================================
# QCanvas Integration (Future Enhancement)
# =============================================================================
# QCANVAS_API_URL=http://localhost:8080/api
# QCANVAS_API_KEY=your_qcanvas_api_key_here
# QCANVAS_TIMEOUT=30
